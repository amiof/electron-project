{
  "name": "downloader",
  "version": "1.0.0",
  "scripts": {
    "start": "concurrently \"npm run start:react\"  \"npm run start:electron\"",
    "start:react": "cd react && npm run dev",
    "start:electron": "cd electron && npm run start",
    "icon": "electron-icon-builder --input=./assets/icon.png --output=build",
    "build": "npm run build:electron && npm run build:react",
    "build:react": "cd react && npm run build",
    "build:electron": "cd electron && npm run build",
    "package": "npm run build && electron-builder",
    "package:linux": "npm run build && electron-builder --linux",
    "package:linux:rpm": "npm run build && electron-builder --linux rpm --x64",
    "package:win": "npm run build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.yourapp.id",
    "icon": "assets",
    "directories": {
      "app": "electron",
      "output": "release",
      "buildResources": "assets"
    },
    "files": [
      "**/*"
    ],
    "extraResources": [
      {
        "from": "react/dist",
        "to": "react/dist",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "electron/src/release-aria2/",
        "to": "electron/dist",
        "filter": [
          "**/*"
        ]
      },
      "./assets/**"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "maintainer": "arm131313@gmail.com",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png",
      "desktop": {
        "Icon": "icon"
      },
      "category": "Network"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "electron": "^34.4.1",
    "electron-builder": "^25.1.8",
    "electron-icon-builder": "^2.0.1"
  }
}
